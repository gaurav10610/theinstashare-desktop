{
  "name": "theinstashare-desktop",
  "version": "0.0.1",
  "description": "Peer to Peer Media Streaming App",
  "author": {
    "name": "gaurav kumar yadav",
    "email": "gaurav10610@gmail.com"
  },
  "keywords": [
    "angular",
    "angular 10",
    "electron",
    "nodejs",
    "typescript",
    "spectron",
    "eslint",
    "sass",
    "windows",
    "mac",
    "linux"
  ],
  "main": "main.js",
  "private": true,
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "ng": "ng",
    "start": "npm-run-all -p electron:serve ng:serve",
    "build": "npm run electron:serve-tsc && ng build --base-href ./",
    "build:dev": "npm run build -- -c dev",
    "build:prod": "npm run build -- -c production",
    "ng:serve": "ng serve -c web -o",
    "electron:serve-tsc": "tsc -p tsconfig.serve.json",
    "electron:serve": "wait-on tcp:4200 && npm run electron:serve-tsc && npx electron . --serve",
    "electron:local": "npm run build:dev && npx electron .",
    "electron:build": "npm run build:prod && electron-builder build",
    "electron:build:run": "npm run electron:build && npm run electron:release:run",
    "electron:release:run": "cd release && \"theinstashare 0.0.1.exe\"",
    "test": "ng test --watch=false",
    "test:watch": "ng test",
    "e2e": "npm run build:prod && cross-env TS_NODE_PROJECT='e2e/tsconfig.e2e.json' mocha --timeout 300000 --require ts-node/register e2e/**/*.e2e.ts",
    "version": "conventional-changelog -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md",
    "lint": "ng lint",
    "robotjs:rebuild": "cd node_modules/robotjs && node-gyp rebuild --runtime=electron --target=13.1.5 --arch=x64 --dist-url=https://atom.io/download/atom-shell --abi=83"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "12.1.0",
    "@angular-devkit/build-angular": "12.1.1",
    "@angular-eslint/builder": "12.2.0",
    "@angular-eslint/eslint-plugin": "12.2.0",
    "@angular-eslint/eslint-plugin-template": "12.2.0",
    "@angular-eslint/template-parser": "12.2.0",
    "@angular/cli": "12.1.1",
    "@angular/common": "12.1.1",
    "@angular/compiler": "12.1.1",
    "@angular/compiler-cli": "12.1.1",
    "@angular/core": "12.1.1",
    "@angular/forms": "12.1.1",
    "@angular/language-service": "12.1.1",
    "@angular/platform-browser": "12.1.1",
    "@angular/platform-browser-dynamic": "12.1.1",
    "@angular/router": "12.1.1",
    "@ngx-translate/core": "13.0.0",
    "@ngx-translate/http-loader": "6.0.0",
    "@types/jasmine": "3.8.1",
    "@types/jasminewd2": "2.0.10",
    "@types/mocha": "8.2.3",
    "@types/node": "16.3.0",
    "@typescript-eslint/eslint-plugin": "4.28.2",
    "@typescript-eslint/eslint-plugin-tslint": "4.28.2",
    "@typescript-eslint/parser": "4.28.2",
    "chai": "4.3.4",
    "conventional-changelog-cli": "2.1.1",
    "core-js": "3.15.2",
    "cross-env": "7.0.3",
    "electron": "13.1.6",
    "electron-builder": "22.11.7",
    "electron-reload": "1.5.0",
    "eslint": "7.30.0",
    "eslint-plugin-import": "2.23.4",
    "jasmine-core": "3.8.0",
    "jasmine-spec-reporter": "7.0.0",
    "karma": "6.3.4",
    "karma-coverage-istanbul-reporter": "3.0.3",
    "karma-electron": "7.0.0",
    "karma-jasmine": "4.0.1",
    "karma-jasmine-html-reporter": "1.6.0",
    "mocha": "9.0.2",
    "ngx-device-detector": "2.1.1",
    "npm-run-all": "4.1.5",
    "rxjs": "7.2.0",
    "spectron": "15.0.0",
    "ts-node": "10.0.0",
    "tslib": "2.3.0",
    "typescript": "4.3.5",
    "wait-on": "6.0.0",
    "webdriver-manager": "12.1.8",
    "zone.js": "0.11.4"
  },
  "engines": {
    "node": ">=10.13.0"
  },
  "dependencies": {
    "ngx-electron": "2.2.0",
    "robotjs": "0.6.0",
    "vkey": "1.0.1"
  }
}
